                            <ComboBox HorizontalAlignment="Left" Margin="188,360,0,0" VerticalAlignment="Top" Width="278"/>
                            <TextBlock HorizontalAlignment="Left" Margin="78,270,0,0" TextWrapping="Wrap" Text="YEAR" VerticalAlignment="Top" RenderTransformOrigin="0.893,1.844"/>
                            <TextBlock HorizontalAlignment="Left" Margin="69,327,0,0" TextWrapping="Wrap" Text="SEMESTER" VerticalAlignment="Top"/>
