                            <TextBox x:Name="txtNASessionid" Grid.Column="2" HorizontalAlignment="Left" Height="23" Margin="344,53,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="148"/>
                            <TextBlock Grid.Column="2" HorizontalAlignment="Left" Margin="87,63,0,0" TextWrapping="Wrap" Text="Session ID" VerticalAlignment="Top" FontWeight="Bold"/>
                        </Grid>
                    </TabItem>
                    <!--Avaibility Group Tab-->
                    <TabItem Header="Groups">
                        <Grid Background="#FFE5E5E5" RenderTransformOrigin="0.26,0.433">
                            <Grid.ColumnDefinitions>

                                <ColumnDefinition Width="400*"/>
                                <ColumnDefinition Width="400*"/>
                            </Grid.ColumnDefinitions>

                            <ListView  Margin="10,10,10,251" x:Name="listViewGROUP"  >
                                <ListView.View>
                                    <GridView AllowsColumnReorder="true" ColumnHeaderToolTip=" GROUP_Information">

                                        <GridViewColumn DisplayMemberBinding="{Binding Semester}" Header="SESSION" Width="100"/>
                                        <GridViewColumn DisplayMemberBinding="{Binding Programme}" Header="SUBJECT" Width="100"/>
