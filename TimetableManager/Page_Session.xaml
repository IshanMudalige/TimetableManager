                                <ColumnDefinition Width="400*"/>
                                <ColumnDefinition Width="400*"/>
                            </Grid.ColumnDefinitions>

                            <ListView  Margin="10,10,10,251" x:Name="listView" SelectionChanged="listView_SelectionChanged" FontWeight="Bold"   >
