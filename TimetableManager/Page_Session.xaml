                                    </GridView>
                                </ListView.View>
                            </ListView>
                            <Button x:Name="sessionsubmitBtn" Content="SUBMIT" HorizontalAlignment="Left" Margin="50.5,476,0,0" VerticalAlignment="Top" Width="95" RenderTransformOrigin="-2.027,0.312" Grid.Column="1" Click="sessionsubmitBtn_Click"/>
