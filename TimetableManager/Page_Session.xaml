                                    </GridView>
                                </ListView.View>
                            </ListView>
                            <Button x:Name="submit" Content="SUBMIT" HorizontalAlignment="Left" Margin="78,476,0,0" VerticalAlignment="Top" Width="95" RenderTransformOrigin="-2.027,0.312" Click="submit_Click" FontWeight="Bold" />
                            <ComboBox x:Name="selectfaculty" HorizontalAlignment="Left" Margin="188,306,0,0" VerticalAlignment="Top" Width="278"/>
                            <ComboBox  x:Name="selectDepartment" HorizontalAlignment="Left" Margin="188,360,0,0" VerticalAlignment="Top" Width="278"/>
                            <ComboBox  x:Name="selectCenter" HorizontalAlignment="Left" Margin="188,414,0,0" VerticalAlignment="Top" Width="278"/>
                            <TextBlock HorizontalAlignment="Left" Margin="78,318,0,0" TextWrapping="Wrap" Text="Faculty" VerticalAlignment="Top" FontWeight="Bold"/>
                            <TextBlock HorizontalAlignment="Left" Margin="78,372,0,0" TextWrapping="Wrap" Text="Department" VerticalAlignment="Top" FontWeight="Bold"/>
                            <TextBlock HorizontalAlignment="Left" Margin="78,429,0,0" TextWrapping="Wrap" Text="Center" VerticalAlignment="Top" FontWeight="Bold"/>
                            <ListView  Margin="44,196,84,65" x:Name="listView_Copy" Grid.Column="1" FontWeight="Bold" SelectionChanged="listView_Copy_SelectionChanged"   >
                                <ListView.View>
                                    <GridView AllowsColumnReorder="true" ColumnHeaderToolTip="Not Available Lecturer Information">
                                        <!--<GridViewColumn DisplayMemberBinding="{Binding LecID}" Header="ID" Width="150"/>-->
                                        <GridViewColumn DisplayMemberBinding="{Binding LecName}" Header="LECTUERS NAME" Width="150"/>
                                        <GridViewColumn DisplayMemberBinding="{Binding Lectime}" Header="TIME" Width="150"/>


                                    </GridView>
                                </ListView.View>
                            </ListView>
                            <ComboBox x:Name="selectnotavailabletime" Grid.Column="1" HorizontalAlignment="Left" Margin="386,92,0,0" VerticalAlignment="Top" Width="148"/>
                            <TextBlock Grid.Column="1" HorizontalAlignment="Left" Margin="87,104,0,0" TextWrapping="Wrap" Text="TIME" VerticalAlignment="Top" FontSize="14" FontWeight="Bold"/>
                            <Button x:Name="NAL_ADD_BTN" Content="ADD" Grid.Column="1" HorizontalAlignment="Left" Margin="245,143,0,0" VerticalAlignment="Top" Width="75" Click="NAL_ADD_BTN_Click" FontWeight="Bold"/>
                            <Button x:Name="NAL_DeleteBTN" Content="DELETE" Grid.Column="1" HorizontalAlignment="Left" Margin="431,476,0,0" VerticalAlignment="Top" Width="91" FontWeight="Bold" Click="NAL_DeleteBTN_Click" />
                            <TextBlock Grid.Column="1" HorizontalAlignment="Left" Margin="87,27,0,0" TextWrapping="Wrap" Text="ID" VerticalAlignment="Top" FontWeight="Bold" FontSize="14"/>
                            <TextBlock Grid.Column="1" HorizontalAlignment="Left" Margin="87,63,0,0" TextWrapping="Wrap" Text="Lecturer Name" VerticalAlignment="Top" FontWeight="Bold" FontSize="14"/>
                            <TextBox x:Name="txtNAID" Grid.Column="1" HorizontalAlignment="Left" Height="23" Margin="386,24,0,0" TextWrapping="Wrap" Text="" VerticalAlignment="Top" Width="148"/>
                            <TextBox x:Name="txtNAlec" Grid.Column="1" HorizontalAlignment="Left" Height="23" Margin="386,64,0,0" TextWrapping="Wrap" Text="" VerticalAlignment="Top" Width="148"/>
                        </Grid>
                    </TabItem>
                    <!--Avaibility Session Tab-->
                    <TabItem Header="Sessions">
                        <Grid Background="#FFE5E5E5" RenderTransformOrigin="0.26,0.433">
                            <Grid.ColumnDefinitions>

                                <ColumnDefinition Width="28*"/>
                                <ColumnDefinition Width="522*"/>
                                <ColumnDefinition Width="549*"/>
                            </Grid.ColumnDefinitions>

                            <ListView  Margin="10,10,10,251" x:Name="listView1" Grid.ColumnSpan="2" SelectionChanged="listView1_SelectionChanged"  >
