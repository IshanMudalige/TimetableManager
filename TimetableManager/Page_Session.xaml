                                    <GridView AllowsColumnReorder="true" ColumnHeaderToolTip="GROUP Information">
                                        <GridViewColumn DisplayMemberBinding="{Binding Year}" Header="SUBGROUP ID" Width="150"/>
                                        <GridViewColumn DisplayMemberBinding="{Binding Year}" Header="SESSION" Width="150"/>
                                        <GridViewColumn DisplayMemberBinding="{Binding Semester}" Header="TIME" Width="150"/>


                                    </GridView>
                                </ListView.View>
                            </ListView>
                            <ComboBox Grid.Column="1" HorizontalAlignment="Left" Margin="337,48,0,0" VerticalAlignment="Top" Width="148"/>
                            <TextBlock Grid.Column="1" HorizontalAlignment="Left" Margin="87,48,0,0" TextWrapping="Wrap" Text="TIME" VerticalAlignment="Top" Height="28" Width="52"/>
