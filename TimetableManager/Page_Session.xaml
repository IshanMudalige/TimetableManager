                        </ListView.View>
                    </ListView>
                    <Button Content="SUBMIT" HorizontalAlignment="Left" Margin="78,536,0,0" VerticalAlignment="Top" Width="95" RenderTransformOrigin="-2.027,0.312" Grid.ColumnSpan="2"/>
